- form_for @user, :html => { :class => 'register' } do |form|
  = form.error_messages

  = form.label :username, "Username"
  = form.text_field :username

  = form.label :email, "Email"
  = form.text_field :email

  = form.label :password, "Password"
  = form.password_field :password

  = form.label :password_confirmation, "Password confirmation"
  = form.password_field :password_confirmation

  = form.submit "Submit"

  %hr
  %strong Or use OpenID

  = form.label :openid_identifier, "OpenID URL"
  = form.text_field :openid_identifier
  .oid
    = link_to 'Google OpenID', register_path(:user => {:openid_identifier => 'https://www.google.com/accounts/o8/id'}), :title => 'Enter via Google OpenID', :method => :post, :class => 'oid google'
    = link_to 'Yandex OpenID', register_path(:user => {:openid_identifier => 'http://openid.yandex.ru'}), :title => 'Enter via Yandex OpenID', :method => :post, :class => 'oid yandex'
    = link_to 'Rambler OpenID', register_path(:user => {:openid_identifier => 'http://rambler.ru'}), :title => 'Enter via Rambler OpenID', :method => :post, :class => 'oid rambler'

  = form.submit "Submit"
