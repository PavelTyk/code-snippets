= text_field_tag :tag_name, nil, :placeholder => 'Type tag RegExp here', :id => 'tag-name-search', :title => 'RegExp to Filter Tags'
%ul.tag-cloud
  - tag_cloud @tag_counts, %w(size-1 size-2 size-3 size-4) do |tag, css_class|
    %li{:class => css_class}= link_to tag.name, tag_path(tag.name), :title => tag.name